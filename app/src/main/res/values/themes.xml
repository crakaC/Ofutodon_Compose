<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ofutodon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mastodon_blue</item>
        <item name="colorPrimaryVariant">@color/mastodon_deep_black</item>
        <item name="colorOnPrimary">@color/mastodon_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/mastodon_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ofutodon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ofutodon.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ofutodon.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>